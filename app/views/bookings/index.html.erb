<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Visa service</th>
      <th>Flight service</th>
      <th>Hotel service</th>
      <th>Pickup service</th>
      <th>Standard service</th>
      <th>Notes</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.visa_service %></td>
        <td><%= booking.flight_service %></td>
        <td><%= booking.hotel_service %></td>
        <td><%= booking.pickup_service %></td>
        <td><%= booking.standard_service %></td>
        <td><%= booking.notes %></td>
        <td><%= booking.customer %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

