<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Addr line 1</th>
      <th>Addr line 2</th>
      <th>Addr line 3</th>
      <th>Post code</th>
      <th>Addr city</th>
      <th>Addr state</th>
      <th>Phone</th>
      <th>Overseas phone</th>
      <th>Reference num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.addr_line_1 %></td>
        <td><%= customer.addr_line_2 %></td>
        <td><%= customer.addr_line_3 %></td>
        <td><%= customer.post_code %></td>
        <td><%= customer.addr_city %></td>
        <td><%= customer.addr_state %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.overseas_phone %></td>
        <td><%= customer.reference_num %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

