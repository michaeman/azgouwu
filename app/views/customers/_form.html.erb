<%= form_for(@customer, html:{class:"form-horizontal"}) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group f-name">
    <%= f.label :first_name, "First Name", class:"col-sm-2 control-label essential" %>
    <div class="col-sm-3">
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
    <%= f.label :last_name, "Last Name", class:"col-sm-2 control-label essential" %>
    <div class="col-sm-3">
      <%= f.text_field :last_name, class:"form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group email">
    <%= f.label :email, class:"col-sm-2 control-label essential" %>
    <div class="col-sm-4">
    <%= f.text_field :email, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class:"col-sm-2 control-label essential" %>
    <div class="col-sm-4">
    <%= f.text_field :phone, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :addr_line_1, "Address Line 1", class:"col-sm-2 control-label essential" %>
    <div class="col-sm-4">
    <%= f.text_field :addr_line_1, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :addr_line_2, "Address line 2", class:"col-sm-2 control-label" %>
    <div class="col-sm-4">
    <%= f.text_field :addr_line_2, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :addr_line_3, "Address line 3", class:"col-sm-2 control-label" %>
    <div class="col-sm-4">
    <%= f.text_field :addr_line_3, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :addr_city, "City", class:"col-sm-2 control-label essential" %>
    <div class="col-sm-4">
    <%= f.text_field :addr_city, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :addr_state, "State", class:"col-sm-2 control-label essential" %>
    <div class="col-sm-1">
      <%= f.select :addr_state, ['VIC', 'NSW', 'ACT', 'NT', 'Qld', 'SA', 'Tas', 'WA'], {}, {class:"form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :post_code, "Postcode", class:"col-sm-2 control-label essential" %>
    <div class="col-sm-3">
      <%= f.text_field :post_code, class:"form-control" %>
    </div>
  </div>
  <!-- <div class="form-group">
    <%= f.label :overseas_phone, class:"col-sm-2 control-label" %>
    <div class="col-sm-4">
    <%= f.text_field :overseas_phone, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reference_num, class:"col-sm-2 control-label" %>
    <div class="col-sm-4">
    <%= f.text_field :reference_num, class:"form-control" %>
    </div>
  </div> -->
  <div class="actions">
    <%= submit_tag("Book a Trip", class: "btn btn-primary btn-lg") %>
  </div>
<% end %>
